              .fit-product-guide-count(style='opacity: 1;') {{ fitRating.tooSmall }}
              .fit-product-guide-progress.progress
                span.progress-bar(role="progressbar",
                :aria-valuenow="fitRating.tooSmall + '%'",
                aria-valuemin="0",
                aria-valuemax="100")
